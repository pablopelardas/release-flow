{
  "name": "releaseflow-electron",
  "version": "1.2.2",
  "type": "module",
  "description": "ReleaseFlow Desktop - Aplicación Electron para gestión automatizada de releases",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run build:all && wait-on http://localhost:5173 && electron dist/main/main.js\"",
    "dev:simple": "concurrently \"vite\" \"npm run build:all && electron dist/main/main.js\"",
    "build": "vite build && npm run build:all",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:all": "npm run build:main && npm run build:preload",
    "electron": "npm run build:all && electron dist/main/main.js",
    "electron:debug": "npm run build:all && set ELECTRON_DEBUG=true && electron dist/main/main.js",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "preview": "vite preview",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "npm run build && npm run package && npx electron-forge make --targets=@electron-forge/maker-squirrel && node scripts/publish-version.js",
    "bump:patch": "node scripts/bump-version.js patch",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major",
    "server:start": "node scripts/start-server.js",
    "publish": "node scripts/publish-version.js"
  },
  "keywords": [
    "electron",
    "vue",
    "release-management",
    "git-automation"
  ],
  "author": "Intuit Development Team",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.11",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^37.3.0",
    "eslint": "^8.55.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "vitest": "^1.0.4",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@primevue/themes": "^4.3.7",
    "@vueuse/core": "^10.11.1",
    "better-sqlite3": "^12.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "liquidjs": "^10.21.1",
    "monaco-editor": "^0.44.0",
    "pinia": "^2.1.7",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.7",
    "semver": "^7.7.2",
    "simple-git": "^3.28.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  }
}
