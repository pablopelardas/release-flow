{
  "name": "releaseflow-electron",
  "version": "1.0.0",
  "type": "module",
  "description": "ReleaseFlow Desktop - Aplicación Electron para gestión automatizada de releases",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron src/main/main.js\"",
    "dev:simple": "concurrently \"vite\" \"electron src/main/main.js\"",
    "build": "vite build",
    "electron": "electron .",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "vue",
    "release-management",
    "git-automation"
  ],
  "author": "Intuit Development Team",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@tailwindcss/typography": "^0.5.16",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^37.3.0",
    "eslint": "^8.55.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "vitest": "^1.0.4",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@vueuse/core": "^10.11.1",
    "better-sqlite3": "^12.2.0",
    "liquidjs": "^10.21.1",
    "monaco-editor": "^0.44.0",
    "pinia": "^2.1.7",
    "primeicons": "^7.0.0",
    "primevue": "^3.53.1",
    "semver": "^7.7.2",
    "simple-git": "^3.28.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  }
}
