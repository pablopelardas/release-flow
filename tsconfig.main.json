{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "skipLibCheck": true,
    "strict": false,
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"]
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "src/renderer",
    "src/preload",
    "tests",
    "dist",
    "node_modules"
  ]
}