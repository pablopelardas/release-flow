{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/preload",
    "rootDir": "./src/preload",
    "skipLibCheck": true,
    "strict": false,
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "types": ["node"]
  },
  "include": ["src/preload/**/*"],
  "exclude": ["src/main", "src/renderer", "tests", "dist", "node_modules"]
}
